<%- include ("../templates/encabezado")%>
<%- include ("../templates/menu")%>

<div class="container mt-5">
  <div class="card" style="background-color: #333; border: 2px solid #3498db; border-radius: 15px; box-shadow: 0px 0px 15px #3498db;">
    <div class="card-header" style="background-color: #3498db; color: #fff; border-radius: 10px 10px 0px 0px;">
      <h1 style="font-size: 24px; padding: 15px;">Productos</h1>
    </div>
    <div class="card-body">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>id</th>
            <th>nombre</th>
            <th>descripcion</th>
            <th>categoria</th>
            <th>precio</th>
            <th>foto</th>
            <th>Editar/Borrar</th>
          </tr>
        </thead>
        <tbody>
          <% 
          productos.forEach((producto) => { 
          %>
          <tr>
            <td><%= producto.id %></td>
            <td><%= producto.nombre %></td>
            <td><%= producto.descripcion %></td>
            <td><%= producto.categoria %></td>
            <td>$<%= producto.precio %></td>
            <td><img src="/images/<%= producto.foto %>" width="100px" alt=""></td>
            <td>
              <a href="/editarProducto/<%= producto.id %>">Editar</a>
              <a href="/borrarProducto/<%= producto.id %>">Borrar</a>
            </td>
          </tr>
          <% 
          }); 
          %>
        </tbody>
      </table>
    </div>
    <div class="card-footer" style="background-color: #3498db; border-radius: 0px 0px 10px 10px;">
    </div>
  </div>
</div>

<%- include ("../templates/pie")%>


