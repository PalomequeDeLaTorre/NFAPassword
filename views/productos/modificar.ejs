<%- include ("../templates/encabezado")%>
<%- include ("../templates/menu")%>
<div class="container mt-5">
  <form action="/editarProducto" method="post" enctype="multipart/form-data">
    <div class="card" style="background-color: #333; border: 2px solid #3498db; border-radius: 15px; box-shadow: 0px 0px 15px #3498db;">
      <div class="card-header" style="background-color: #3498db; color: #fff; border-radius: 10px 10px 0px 0px;">
        <h1 style="font-size: 24px; padding: 15px;">Modificar producto</h1>
      </div>
      <div class="card-body">
        <input type="hidden" name="id" id="id" value="<%= producto.id %>">
        <input class="form-control mb-3" type="text" value="<%= producto.nombre %>" name="nombre" id="nombre" placeholder="Nombre del Producto" autofocus style="background-color: #ffffff; color: #000000; border: 1px solid #3498db; border-radius: 5px;">
        <textarea class="form-control mb-3" name="descripcion" id="descripcion" placeholder="DescripciÃ³n" style="background-color: #ffffff; color: #000000; border: 1px solid #3498db; border-radius: 5px;"><%= producto.descripcion %></textarea>
        <input class="form-control mb-3" type="text" value="<%= producto.categoria %>" name="categoria" id="categoria" placeholder="Categoria" style="background-color: #ffffff; color: #000000; border: 1px solid #3498db; border-radius: 5px;">
      </div>
      <div class="input-group mb-3">
        <span class="input-group-text">$</span>
        <input class="form-control" type="number" value="<%= producto.precio %>" name="precio" id="precio" placeholder="Precio" style="background-color: #ffffff; color: #000000; border: 1px solid #3498db; border-radius: 5px;">
      </div>
      <div class="card-body">
        <input class="form-control mb-3" type="file" name="foto" id="foto" style="background-color: #333; color: #caffca; border: 1px solid #444; border-radius: 5px;">
      </div>
      <div class="card-footer" style="background-color: #3498db; border-radius: 0px 0px 10px 10px;">
        <button type="submit" class="form-control btn btn-primary" style="background-color: #3498db; color: #fff; border: none; border-radius: 5px; padding: 10px;">Modificar producto</button>
      </div>
    </div>
  </form>
</div>
